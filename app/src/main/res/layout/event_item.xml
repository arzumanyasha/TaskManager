<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearLayoutEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/_9">

                <TextView
                    android:id="@+id/textViewEventName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event title"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/textViewEventTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Event time"
                    android:layout_below="@id/textViewEventName"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/textViewEventDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewEventTime"
                    android:text="Event description"
                    android:textSize="15sp"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewDeleteEvent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_delete_black_24dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>